/* Reset básico */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Estilos globais */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    padding: 20px;
}

header {
    background-color: #333;
    color: #fff;
    padding: 10px 0;
    text-align: center;
}

header h1 {
    margin-bottom: 10px;
}

nav ul {
    list-style-type: none;
}

nav ul li {
    display: inline-block;
    margin: 0 15px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
}

.content {
    margin: 20px 0;
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 5px;
}

footer {
    text-align: center;
    margin-top: 20px;
}

/* Estilos Responsivos */
@media (max-width: 768px) {
    body {
        padding: 10px;
    }
    nav ul li {
        display: block;
        margin: 10px 0;
    }
}

@media (max-width: 480px) {
    header h1 {
        font-size: 24px;
    }
    .content {
        padding: 15px;
    }
}
